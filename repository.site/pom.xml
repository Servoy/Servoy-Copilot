<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.servoy</groupId>
        <artifactId>com.servoy.eclipse.servoypilot.parent</artifactId>
        <version>2026.3.0-SNAPSHOT</version>
    </parent>

    <artifactId>com.servoy.eclipse.servoypilot.site</artifactId>
    <packaging>eclipse-repository</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-gpg-plugin</artifactId>
                <version>${tycho-version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>sign-p2-artifacts</goal>
                        </goals>
                        <configuration>
                            <signer>bc</signer>
                            <keyname>D9DE7716CDB8905A30C8CDEFE15A4758177D4570</keyname>
                            <addPublicKeyToRepo>true</addPublicKeyToRepo>
                            <addPublicKeyToArtifacts>true</addPublicKeyToArtifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>